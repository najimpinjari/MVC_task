@{
    ViewBag.Title = "Home Page";
}

<main style="height: 100vh;">
    <section class="row" aria-labelledby="aspnetTitle" style="position: relative; height: 100%;">
        <!-- Background image with blur -->
        <div class="blur-background"></div>

        <!-- Content -->
        <div class="content">
            <h1 id="title">Employee Portal For (Registration)</h1>
            <p class="lead">With our diverse industry expertise, Vhaash Technologies strives to deliver world-class business solutions to clients hailing from varied industries. Over the years, we have delivered tailored solutions to meet the needs of our clients at every step of their way</p>
            <p><a href="https://vhaashtech.com/" class="btn btn-primary btn-md">Join Vhaash Today &raquo;</a></p>
        </div>
    </section>
</main>

<style>
    /* Style for the blurred background */
    .blur-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://lh3.googleusercontent.com/p/AF1QipOrSwgMuroD1VRSaIZu3cUzI7rhYwDpHCvBcxg=s1360-w1360-h1020'); /* Replace with your image URL */
        background-size: cover;
        filter: blur(5px); /* Adjust the blur strength as needed */
        z-index: -1; /* Ensure it's behind other content */
    }

    /* Style for the content */
    .content {
        position: relative;
        z-index: 1; /* Ensure it's above the blurred background */
        padding: 20px;
        color: white; /* Adjust text color for better contrast */
    }

    /* Additional styles can be added as needed */
</style>
